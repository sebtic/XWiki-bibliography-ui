#set($docextras=[])
### setting right mode for the sheet 
### setting $curdoc variable either already set or set to $doc
#if(!$mode)
  #if($xcontext.action=="inline" || $xcontext.action=="edit")
    #set($mode = "edit")
  #else
    #set($mode = "view")
  #end
#end
#if(!$curdoc)
  #set($curdoc = $doc)
#end
$xwiki.jsx.use("Bibliography.Code.PersonSheet")
$xwiki.ssx.use("Bibliography.Code.PersonSheet")
#set($xobject = $curdoc.getObject('Bibliography.Code.PersonClass'))
#### begin display macros
### this macro shows a validation error message if it exists
#macro(showvalidationmessage $message)
  #if($xcontext.validationStatus.errors.contains($message))
    {{error}}$services.localization.render($message){{/error}}
  #end
#end ## end showvalidationmessage
### this macros displays a field and it's tooltip
#macro(showfield $fieldname)
  #if( $mode == "edit")
    (% fieldname="$fieldname" %) (((
      &lt;label for="Bibliography.Code.PersonClass_0_$fieldname"
        data-toggle='tooltip' 
        title='$services.localization.render("bibliography.person.tooltip_$fieldname")'&gt;
          $services.localization.render("bibliography.person.label_$fieldname")
          &lt;span class="tooltip-mark"&gt;$services.icon.render('question','Silk')&lt;/span&gt; :
      &lt;/label&gt;
      $curdoc.display($fieldname, $mode)
     #showvalidationmessage("bibliography.person.val_$fieldname")
    )))
  #else
    #set($value = $xobject.getProperty($fieldname).value)
    #if ($stringtool.isNotBlank($value.trim()))
      (((
        &lt;span data-toggle='tooltip' 
          title='$services.localization.render("bibliography.person.tooltip_$fieldname")'&gt; 
          $services.localization.render("bibliography.person.label_$fieldname")
          &lt;span class="tooltip-mark"&gt;$services.icon.render('question','Silk')&lt;/span&gt;
        &lt;/span&gt; : $curdoc.display($fieldname, $mode)
      )))
    #end
  #end
#end ## end showfield macro
##### end macros
$curdoc.use("Bibliography.Code.PersonClass")
#if($mode != "edit")
(% class="bibliography-accordion" %) (((
=== $services.localization.render('bibliography.person.renderedGivenFirst') ===
(% class="bibliography-rendered" %) (((
  ((($xobject.getProperty("renderedGivenFirst").value)))
)))
=== $services.localization.render('bibliography.person.renderedFamilyFirst') ===
(% class="bibliography-rendered" %) (((
  ((($xobject.getProperty("renderedFamilyFirst").value)))
)))
#end
=== $services.localization.render('bibliography.person.details') ===
(((
#showfield("family")
#showfield("given")
#showfield("droppingParticle")
#showfield("nonDroppingParticle")
#showfield("suffix")
)))

#if($mode != "edit")
  #set($wikiDescriptorManager = $services.component.getInstance("org.xwiki.wiki.descriptor.WikiDescriptorManager"))
  #set($map = $services.bibliography.getEntryReferencingAPerson($curdoc.documentReference.toString()))
  #set($sum = 0)
  #foreach($mapEntry in $map.entrySet())
    #set($sum = $sum + $mapEntry.value.size())
  #end
   === $services.localization.render('bibliography.person.referencedBy', $sum) ===
    (((
    #foreach($ref in $map.get($curdoc.documentReference.wikiReference.name))
      #set ($refDoc = $xwiki.getDocument($ref).getTranslatedDocument())
      #set($showDoc = $services.security.authorization.hasAccess('edit', $refDoc))
      #if($showDoc)
        * [[$refDoc.get('rendered')&gt;&gt;$escapetool.xml($refDoc.fullName)]]
      #else
        * $services.localization.render('bibliography.person.referencedByButInaccessible')
      #end
    #end

    #foreach($mapEntry in $map.entrySet())
      #if($mapEntry.key != $curdoc.documentReference.wikiReference.name)
        #set($wikiDescriptor = $wikiDescriptorManager.getById($mapEntry.key))
        ==== $services.localization.render('bibliography.person.referencedByOnOtherWiki', [ '[[$wikiDescriptor.prettyName&gt;&gt;$wikiDescriptor.mainPageReference]]' ]) ===
        #foreach($ref in $mapEntry.value)
          #set ($refDoc = $xwiki.getDocument($ref).getTranslatedDocument())
          #set($showDoc = $services.security.authorization.hasAccess('edit', $refDoc))
          #if($showDoc)
            * [[$refDoc.fullName&gt;&gt;$escapetool.xml($refDoc.fullName)]]
          #else
            * $services.localization.render('bibliography.person.referencedByButInaccessible')
          #end
        #end
      #end
    #end
    )))
#end

#if($mode != "edit")
))) ## accordion
#end

